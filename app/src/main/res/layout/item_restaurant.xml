<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFBF7"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Restaurant Image Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F5F5F5">

            <ImageView
                android:id="@+id/restaurantImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="#F0F0F0" />

        </androidx.cardview.widget.CardView>

        <!-- Restaurant Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="12dp">

            <!-- Restaurant Title -->
            <TextView
                android:id="@+id/restaurantTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_bold"
                android:maxLines="1"
                android:text="Restaurant Name"
                android:textColor="#2C3E50"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Category with background -->
            <TextView
                android:id="@+id/restaurantCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/category_pill_bg"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Category"
                android:textColor="#8E44AD"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:baselineAligned="false">

                <!-- Price with icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/price_bg"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:gravity="center_vertical"
                    android:minHeight="0dp"
                    android:layout_marginRight="3dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_money"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        app:tint="#388E3C"/>

                    <TextView
                        android:id="@+id/restaurantPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM10-RM20"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"/>

                </LinearLayout>



                <!-- Star Rating -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rating_bg"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:gravity="center_vertical"
                    android:minHeight="0dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_star"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/ratingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.0"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#F39C12"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Bookmark Icon with background -->
        <androidx.cardview.widget.CardView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="top"
            app:cardCornerRadius="18dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="#FFFFFF">

            <ImageView
                android:id="@+id/bookmarkIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/heart"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>