<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF7ED"
    android:paddingTop="16dp"
    android:paddingBottom="8dp"
    android:paddingHorizontal="16dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- Favourites Button -->
        <LinearLayout
            android:id="@+id/favouritesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/favouriteIcon"
                android:layout_width="24dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_favourite_filled" />

            <TextView
                android:id="@+id/favouriteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favourites"
                android:textSize="12sp"
                android:textColor="#D1495B"
                android:fontFamily="@font/poppins_semibold" />
        </LinearLayout>

        <!-- Search View -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#FFF1E6">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:textColorHint="#6E6E6E"
                app:iconifiedByDefault="false"
                app:queryHint="Search your cravingâ€¦"
                app:searchIcon="@drawable/ic_magnifying_glass"
                app:submitBackground="@android:color/transparent" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Genre Filter -->
            <androidx.cardview.widget.CardView
                android:id="@+id/genreFilterCard"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:id="@+id/genreFilterText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Genre"
                        android:textSize="12sp"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/restaurant_icon"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Location Filter -->
            <androidx.cardview.widget.CardView
                android:id="@+id/locationFilterCard"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:id="@+id/locationFilterText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="12sp"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="13dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/location_icon" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Price Range Filter -->
            <androidx.cardview.widget.CardView
                android:id="@+id/priceFilterCard"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:id="@+id/priceFilterText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Range"
                        android:textSize="12sp"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/price_icon" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Rating Filter -->
            <androidx.cardview.widget.CardView
                android:id="@+id/ratingFilterCard"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:id="@+id/ratingFilterText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating"
                        android:textSize="12sp"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star_icon"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEDFCF"
        android:layout_marginBottom="8dp" />

    <!-- Restaurant List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/restaurantRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        android:scrollbars="vertical" />

</LinearLayout>