<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF7ED"
    android:gravity="center"
    android:padding="24dp">

    <FrameLayout
        android:id="@+id/logoContainer"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/logo_circle_bg"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:padding="4dp"
            android:src="@drawable/img" />
    </FrameLayout>

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Makan Miri"
        android:textColor="#D1495B"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local Eats &amp; Café Guide"
        android:textColor="#624D3F"
        android:textSize="16sp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_regular" />


    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your tummy’s new BFF"
        android:textColor="#624D3F"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/merriweather_italic" />

    <!-- Start Button -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Let's Makan!"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_semibold"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:backgroundTint="#D1495B"
        android:background="@drawable/rounded_button_red"
        android:elevation="4dp" />

    <!-- Footer version -->
    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0  ©2025"
        android:textColor="#B9AAA6"
        android:textSize="12sp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins_regular" />

</LinearLayout>
